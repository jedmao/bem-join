{
  "name": "bem-join",
  "version": "1.1.4",
  "description": "A function used to construct BEM class names.",
  "keywords": [
    "bem",
    "join",
    "react",
    "block",
    "element",
    "modifiers",
    "css",
    "class",
    "classname",
    "curry"
  ],
  "author": "Jed Mao <jedmao@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jedmao/bem-join.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "ava": {
    "files": [
      "dist/**/*.test.js"
    ],
    "sources": [
      "dist/**/*.js"
    ]
  },
  "scripts": {
    "clean": "rimraf coverage dist *.log bem-join-*",
    "codecov": "codecov -f coverage/lcov.info",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc",
    "prebuild:watch": "npm run prebuild",
    "build:watch": "tsc --watch",
    "lint": "tslint --project tsconfig.test.json",
    "pretest": "npm run build -- --project tsconfig.test.json",
    "test": "nyc ava",
    "watch": "npm test -- --watch",
    "prepack": "npm test && npm run build",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.test.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": true,
    "all": true,
    "check-coverage": true
  },
  "devDependencies": {
    "ava": "^1.0.1",
    "nyc": "^13.2.0",
    "rimraf": "^2.6.2",
    "snyk": "^1.94.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "snyk": true,
  "engines": {
    "node": ">=6"
  }
}
